# Load Generator Configuration
# Copy to .env and modify as needed

# Execution layer: reth, cdk-erigon, gravity-reth
EXECUTION_LAYER=reth

# Block builder / transaction submission endpoint
BUILDER_RPC_URL=http://localhost:13000

# L2 node for confirmations
L2_RPC_URL=http://localhost:13000

# L2 WebSocket for block metrics (newHeads)
L2_WS_URL=ws://localhost:18547

# Preconfirmation WebSocket (reth mode only)
PRECONF_WS_URL=ws://localhost:13002/ws/preconfirmations

# API listen address
LISTEN_ADDR=:13001

# SQLite database path
DATABASE_PATH=./loadgen.db

# Block time (must match block-builder for account scaling)
BLOCK_TIME_MS=150
